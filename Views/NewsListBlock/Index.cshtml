@using EPiServer.Shell.Web.Mvc.Html @using EPiServer.Web.Mvc.Html 
@using EPiCenterBaseProject.Extensions
@using EPiServer.Web.Routing
@model EPiCenterBaseProject.Models.ViewModels.NewsListBlockViewModel

<h2>
    EPi News
</h2>
<div class="cont">
    <ul class="newsUpdates">
        @foreach(var newsPage in Model.newsPages) 
        {
        <li>
            <div class="newsImg">
                <img src="@Url.ContentUrl(newsPage.NewsImage)" alt="Banner 1" /></div>
            <div class="newsLinkCont">
                <span class="date">@newsPage.StartPublish.ToShortDateStr()</span> <a href="@UrlResolver.Current.GetUrl(newsPage.ContentLink)">@newsPage.Title</a>
            </div>
        </li>
        }
    </ul>
</div>
